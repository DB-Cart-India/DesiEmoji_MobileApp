<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llay_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
        android:id="@+id/iv_emoji"
        android:layout_width="@dimen/toolbar_icon_height"
        android:layout_height="@dimen/toolbar_icon_height"
        android:padding="4dp"
        android:src="@drawable/ic_keyboard_arrow_left"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_emoji"
            android:layout_width="@dimen/toolbar_icon_height"
            android:layout_height="@dimen/toolbar_icon_height"
            android:gravity="center"
            android:textSize="@dimen/emoji_text_size"
            android:text=""
            android:visibility="gone"/>

        <View
            android:id="@+id/view_select"
            android:layout_width="@dimen/toolbar_icon_height"
            android:layout_height="@dimen/frogo_dimen_2dp"/>

    </LinearLayout>
